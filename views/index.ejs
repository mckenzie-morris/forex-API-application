<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mckenzie's Forex App</title>
  </head>
  <body>
    <!-- theme control -->
    <div class="dropdown float-end m-3">
      <button id="theme_toggle" type="button" class="btn btn-outline-primary">
        <img
          id="theme_toggle_img"
          src="light-mode-day-sun.svg"
          ;
          height="25px"
          width="25px"
        />
      </button>
    </div>
    <div class="container d-flex justify-content-center align-items-center vh-100">
      <div id="primaryContainer" class="container-fluid d-flex justify-content-center align-items-center h-50">
        <div class="dropdown-center ">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Select a Currency
          </button>
          <ul id="currencySelector" class="dropdown-menu">
            <% for (let elmt of currencies) { %>
            <li><a class="dropdown-item" href="#"><%=elmt%></a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
    <script src="main-bundle.js"></script>
  </body>
</html>
