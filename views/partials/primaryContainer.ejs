<div class="container-fluid d-flex flex-column align-items-center">
  <!-- Currency symbols SVG -->
  <div id="symbols"  style="position: absolute; z-index: -1;  top: 50%; left: 50%; transform: translate(-50%, -20%);">
    <img src="currencySymbols.svg" alt="Currency Symbols">
  </div>
  <!-- Welcome header -->
  <div class="text-center" style="margin-top: 50px">
    <h1 class="display-1 text-primary fw-bold">Welcome to My Currency Converter</h1>
  </div>
  <div class="my-5">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-outline-primary btn-lg"
      data-bs-toggle="modal"
      data-bs-target="#codesModal"
    >
      Currency Codes
    </button>

    <!-- Modal -->
    <div class="modal fade" id="codesModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('secondaryContainer.ejs') %>
</div>
